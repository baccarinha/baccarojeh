    <script>
        var map = L.map('map').setView([-23.2233, -46.9105], 16);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        var locations = [
            { name: "Pr√©dio 1", coords: [-23.214350, -46.891555], info: "Salas de aula e laborat√≥rios" },
            { name: "Pr√©dio 2", coords: [-23.212827, -46.893017], info: "Sala de aula e laborat√≥rios" },
            { name: "Pr√©dio 3", coords: [-23.213885, -46.892887], info: "Bloco acad√™mico com laborat√≥rios especializados" },
            { name: "Pr√©dio 4", coords: [-23.214397, -46.893532], info: "Centro de pesquisa e inova√ß√£o" },
            { name: "Anfiteatro", coords: [-23.215271, -46.891171], info: "Espa√ßo para eventos e palestras." }
        ];
        
        function addMarkers() {
            locations.forEach(loc => {
                let marker = L.marker(loc.coords).addTo(map)
                    .bindPopup(`<b>${loc.name}</b><br>${loc.info}`);
            });
        }
        
        addMarkers();
        
        document.getElementById("gps-btn").addEventListener("click", function() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(position => {
                    let userCoords = [position.coords.latitude, position.coords.longitude];
                    let userMarker = L.marker(userCoords).addTo(map).bindPopup("Voc√™ est√° aqui").openPopup();
                    map.setView(userCoords, 18);
                }, () => alert("N√£o foi poss√≠vel obter sua localiza√ß√£o"));
            } else {
                alert("Geolocaliza√ß√£o n√£o suportada pelo seu navegador");
            }
        });
        
        document.getElementById("location-select").addEventListener("change", function() {
            let loc = JSON.parse(this.value);
            if (loc) {
                map.setView(loc.coords, 18);
                L.Routing.control({
                    waypoints: [
                        L.latLng(loc.coords[0], loc.coords[1])
                    ],
                    routeWhileDragging: true
                }).addTo(map);
            }
        });
    
        new QRCode(document.getElementById("qrcode"), {
            text: window.location.href,
            width: 100,
            height: 100
        });
    </script>
